<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://JAVA.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS-Project1</display-name>
  <welcome-file-list>
    <welcome-file>resources/html/index.html</welcome-file>
  </welcome-file-list>	
  
    <servlet>
  	<servlet-name>MasterServlet</servlet-name>
  	<servlet-class>com.ers.servlets.MasterServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MasterServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
    <url-pattern>/register</url-pattern> 
  	<url-pattern>/getSession</url-pattern>
  	<url-pattern>/getUser</url-pattern>
  	<url-pattern>/doLogout</url-pattern>
  	<url-pattern>/getAllById</url-pattern>
  	<url-pattern>/getAllReimbursements</url-pattern>
  	<url-pattern>/filterByStatus</url-pattern>
  	<url-pattern>/addNewReimbursement</url-pattern>
    <url-pattern>/approveReimbursement</url-pattern>
  	<url-pattern>/denyReimbursement</url-pattern>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  
</web-app>
